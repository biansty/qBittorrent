@@ -100,6 +100,30 @@ void session_impl::init()
 // 新增多接口支持逻辑
 if (settings.multi_interface_mode) {
     std::vector<std::string> interfaces = settings.interfaces;
     int tracker_index = 0;
     for (auto& t : torrents) {
         for (auto& tracker : t.trackers()) {
             std::string iface = interfaces[tracker_index % interfaces.size()];
             tracker.bind_interface(iface);
             tracker_index++;
         }
         int peer_index = 0;
         for (auto& peer : t.peers()) {
             std::string iface = interfaces[peer_index % interfaces.size()];
             peer.bind_interface(iface);
             peer_index++;
         }
     }
 }
